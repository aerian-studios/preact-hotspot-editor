---
to: src/components/<%= h.inflection.undasherize(name) %>/<%= h.inflection.undasherize(name) %>.tsx
---
<% const comp = h.inflection.undasherize(name) -%>
import { h, FunctionalComponent } from "preact";

import * as styles from "./<%= comp %>.scss";

interface Props {
    style?: any;
}
<% if(locals.class) { -%>
interface State {
    myProp?: boolean;
}

const INITIAL_STATE: State = {
    myProp: true,
};

export class <%= comp %> extends React.PureComponent<Props, State> {
    public state = INITIAL_STATE;

    public render() {
        return (
            <div className={styles.base} style={this.props.style}>
                {this.props.children}
            </div>
        );
    }
}
<% } else { %>
export const <%= comp %>: FunctionalComponent<Props> = ({ children, style }) => (
    <div className={styles.base} style={style}>
        {children}
    </div>
);
<% } -%>
export default <%= comp %>;
